<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    
    <img src="<%= @post.image %>" class= "post-show", style="width: 300px;height:200px;">
    <br/>
    <div class="w-100"></div>
    <div class="col">
      <p>
        <strong>Sport name:</strong>
        <%= @post.sport_name %>
      </p>
      
      <p>
        <strong>Title:</strong>
        <%= @post.title %>
      </p>
      
      <p>
        <strong>Image:</strong>
        <%= @post.image%>
      </p>
      
      <p>
        <strong>Description:</strong>
        <%= @post.description %>
      </p>
      
      <p>
        <strong>Tag:</strong>
        <%= @post.tag %>
      </p>
      
      <br/>
      <p>
        <h2>
          <%= @post.comments.count %>
          Comments
        </h2>
        <%= render @post.comments  %>
        <h3>Add Comments</h3>
        <%= render 'comments/form' %>
      </p>
      
      <p>
        <strong>User:</strong>
        <%= @post.user.email.split('@')[0].capitalize  %>
      </p>
      
    </div>
  
  </div>

  <%= link_to 'Edit', edit_post_path(@post), class:"btn btn-outline-light" %> |
  <%= link_to 'Back', posts_path, class:"btn btn-outline-light" %>

</div> 
