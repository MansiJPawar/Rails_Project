<p id="notice"><%= notice %></p>

<div class="container-fluid" style="padding: 50px;margin:0px;">
    <div class="row" style="margin-left:40px;">

      <div class="col-6" >
         <!-- <img src="<%= @post.image %>" class= "post-show", style="width: 300px;height:200px;"> -->
         <% (0...@post.images.count).each do |image| %><br/><br/>
         <div class="post-show">
            <%= image_tag(@post.images[image])%>
         </div>
         <% end %>

         <div 
        style="
           padding: 20px;
           width:300px;
           height:200px;
           color:white;
           margin-top:25px;
           font-weight: 900px;
           font-size: larger;
           box-shadow: 0 8px 8px -4px rgb(32, 45, 165);">
          <div style="margin-bottom: 30px;margin-left:25px;">
            <%= @post.sport_name %>
            <br/><br/>
            <%= @post.title %>
            <br/><br/>
            <%= @post.description %>
            <br/><br/>
            <%= @post.tag %>
          </div>
        </div>
    </div>
    
    <div style="width:300px;" class="col-6" >
        <h6 style="color: white;"><%= @post.comments.count%>  Comments</h6>
        
        <%= render @post.comments  %>
        <h2 style="color: white;">
          <%= @post.user.email.split('@')[0].capitalize  %>
        </h2>
        <h3 style="color: white;">Add Comments</h3>
        <%= render 'comments/form' %>
      
      <%= link_to 'Back', posts_path, class:"btn btn-outline-light" %> |
     
      <%= link_to 'Edit', edit_post_path(@post), class:"btn btn-light" %> 
  
    </div>
  </div>
</div> 

