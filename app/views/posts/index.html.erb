<p id="notice"><%= notice %></p>

<h1 style="color: #fff;">Posts</h1>

<table id="ordersTable" class="table table-striped table-bordered table-hover text-white font-weight-bold">
  <thead class="thead-dark"> 
    <tr>
      <th>Sport name</th>
      <th>Title</th>
      <th>Image</th>
      <th>Description</th>
      <th>Tag</th>
      <th>User</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.sport_name %></td>
        <td><%= post.title %></td>
        <td><img src="<%= post.image %>"></td>
        <td><%= post.description %></td>
        <td><%= post.tag %></td>
        <td><%= post.user %></td>
        <!-- <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

<script>
  $(document).ready(function(){
    var oTable = $("#ordersTable").DataTable({})
  });
</script>

