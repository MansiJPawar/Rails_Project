<p id="notice"><%= notice %></p>

<h1 id="head-text-color">Posts</h1>

<table id='mysport' class="table table-striped table-bordered table-hover text-white font-weight-bold">
  <thead class="thead-dark"> 
    <tr>
      <th>Sport name</th>
      <th>Title</th>
      <th>Image</th>
      <th>Description</th>
      <th>Tag</th>
      <th>User</th>
      <% if current_user && current_user.admin %>
      <th colspan="2"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <!-- <td><img src="<%= post.image %>"></td> -->
        <td><%= post.sport.sport_name %></td>
        <td><%= link_to post.title, sport_post_path(@sport.id, post.id) , id:"head-text-color"%></td>
        <td><img src="<%= post.image %>" class= "post-show"></td>
        <td><%= post.description %></td>
        <td><%= post.tag %></td>
        <td><%= post.user.email.split('@')[0].capitalize %></td>

        <% if current_user && current_user.admin %>

        <td><%= link_to 'Edit', edit_sport_post_path(@sport.id, post.id), class:"btn btn-light btn-sm"%></td>
        
        <td><%= link_to 'Destroy', sport_post_path(@sport.id, post.id), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-light btn-sm" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Post',  new_sport_post_path(@sport.id) , class:"btn btn-light" %>
<%= link_to 'Back', root_path, class:"btn btn-outline-light" %>