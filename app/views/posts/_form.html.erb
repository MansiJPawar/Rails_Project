<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
      
    </div>
  <% end %>
  
  <div class="field" id="dropdown">
    <%= form.collection_select(:sport_id, Sport.all, :id, :sport_name, { :prompt => 'Select a Sport', :selected => @post.sport_id }, { class: 'form-control js-example-basic-single' }) %>
  </div><br/><br/>

  <div class="field form-group">
    <%= form.text_field :title, class:"form-control", placeholder:"title" %>
  </div>

  <div class="field form-group">
    <%= form.file_field :images, multiple: true, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.text_area :description, class:"form-control", placeholder:"description" %>
  </div>

  <div class="field form-group">
    <%= form.text_field :tag , class:"form-control", placeholder:"add your hashtags"%>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-outline-light" %>
  </div>
<% end %>
