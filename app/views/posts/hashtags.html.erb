<p id="notice"><%= notice %></p>

<h1 id="head-text-color">Posts</h1>

<table>
  <thead>
    <tr>
      <th>Sport name</th>
      <th>Title</th>
      <th>Image</th>
      <th>Description</th>
      <th>Tag</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.sport.sport_name %></td>
        <td><%= post.title %></td>
        <td><%= post.image %></td>
        <td><%= post.description %></td>
        <td><%= render_with_hashtags(post.tag) %></td>
        <td><%= post.user %></td>
        <td><%= link_to 'Show', post %></td>
        <% if current_user && current_user.admin %>
        <td><%= link_to 'Edit', edit_sport_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table><br>

<%= link_to 'New Post', new_sport_post_path, class:"btn btn-outline-light"%>
