<h1 style="color: #fff;font-weight:bold;">Achievements</h1>

<table class="table table-bordered table-striped" id='mysport'>
  <thead class="table-dark">
    <tr>
      <th>user name</th>
      <!-- <th>Sport name</th> -->
      <th>Achievement</th>
      <th>Captain</th>
      <!-- <th>status</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>
    <tbody>
    <% @achievements.each do |achievement| %>
      <tr id="hide" id="show">
        <td><%= achievement.user.email.split('@')[0].capitalize %></td>
        <!-- <td><%= achievement.sport_name %></td> -->
        <td><%= achievement.achievement %></td>
        <td><%= achievement.captain %></td>
        <!-- <td><%= achievement.gender %></td> -->
        <td><%= link_to 'Show', achievement, class:"btn btn-light" %>
        <% if current_user && current_user.admin %>
       
        <%= link_to 'Edit',  edit_achievement_path(achievement), class:"btn btn-light" %>
        <%= link_to 'Destroy', achievement, class:"btn btn-light", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>

</table>

<%= link_to 'New Achievement', new_achievement_path , class:"btn btn-light"%>
<%= link_to 'Back', root_path , class:"btn btn-outline-light" %>

<script>
  $(document).ready(function() {
    $("#hide").click(function(){
      $("p").hide();
    });

    $("#show").click(function(){
     $("p").show();
    }); 
  });
</script>