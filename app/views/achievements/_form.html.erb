<%= form_with(model: achievement, local: true) do |form| %>
  <% if achievement.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(achievement.errors.count, "error") %> prohibited this achievement from being saved:</h2>

      <ul>
      <% achievement.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.collection_select(:sport_id, Sport.all, :id, :sport_name, { :prompt => 'Select a Sport', :selected => @achievement.sport_id }, { class: 'form-control' }) %>
  </div>

  <div class="field form-group">
    <!-- <%= form.label :achievement %> -->
    <%= form.text_area :achievement,class:"form-control" , placeholder:"achievement" %>
  </div>

  <div class="field form-group">
    <!-- <%= form.label :certificate %> -->
    <%= form.file_field :file,class:"form-control" , placeholder:"certificate" %>
  </div>

  <div class="field form-group">
    <%= form.label :captain %>
    <%= form.check_box :captain , placeholder:"captain"%>
  </div>

  <% if current_user.admin? %>
  <div class="field form-group">
      Approve <p><%= form.radio_button :gender, ['Approved'], id:"show" %></p>
      Reject  <p><%= form.radio_button :gender, ['Rejected'], id:"hide" %></p>
  </div>  
  <% end %>

  <!-- <div class="field">
    <%= form.label :Gender %>
    male<%= form.radio_button :gender, ['male']%>
    female<%= form.radio_button :gender, ['female']%>
  </div> -->

  <div class="actions">
    <%= form.submit class:"btn btn-light" %>
  </div>
<% end %>

