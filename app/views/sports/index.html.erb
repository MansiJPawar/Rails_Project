<div style="font-family: Lucida Console, Courier New, monospace;" >
 
  <p id="notice"><%= notice %></p>

<h1 style="color: #fff;">Sports</h1>

<table id='mysport' class="table table-striped table-bordered table-hover text-white font-weight-bold">
  <thead class="thead-dark"> 
    <tr>
      <th>Sport name</th>
      <th>Sport equipement</th>
      <% if current_user && current_user.admin %>
      <th colspan="3"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @sports.each do |sport| %>
      <tr>
        <td><%= sport.sport_name %></td>
        <td><%= sport.sport_equipement %></td>
        <% if current_user && current_user.admin %>
        <td><%= link_to 'Show', sport, class:"btn btn-light btn-sm"%></td>
        <td><%= link_to 'Edit', edit_sport_path(sport), class:"btn btn-light btn-sm" %></td>
        <td><%= link_to 'Destroy', sport, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-light btn-sm" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user && current_user.admin %>
<%= link_to 'New Sport', new_sport_path , class:"btn btn-light" %>
<% end %>

<%= link_to 'Back', root_path, class:"btn btn-outline-light" %>

</div>
</div>
