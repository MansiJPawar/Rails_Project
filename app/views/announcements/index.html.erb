<h1>Announcements</h1>

<table class="table table-bordered table-striped" id='mysport'>
  <thead class="table-dark">
    <tr>
      <th>Announcement title</th>
      <th>Content</th>
      <!-- <th>User</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>
    <tbody>
    <% @announcements.each do |announcement| %>
      <tr>
        <td><%= announcement.announcement_title %></td>
        <td><%= announcement.content %></td>
        <!-- <td><%= announcement.sport_name %></td> -->
        <td><%= link_to 'Show Sport', [@sport], class:"btn btn-light" %>
        <%= link_to 'Edit Announcement', edit_sport_announcement_path(@sport, announcement), class:"btn btn-light" %>
        <%= link_to 'Destroy Announcement', [@sport, announcement], class:"btn btn-light", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>

</table><br>
<%= link_to 'New Announcement', new_sport_announcement_path(@sport), class:"btn btn-light" %>
