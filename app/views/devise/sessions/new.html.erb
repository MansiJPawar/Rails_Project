<h2 style="color: #fff;" >Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"abc@gmail.com" %>
  </div>

  <div class="field form-group">
    <%= f.password_field :password, autocomplete: "current-password", class:"form-control", placeholder:"password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field form-group">
      <%= f.check_box :remember_me %><%= f.label :remember_me ,style:"color: #fff; font-weight:bold;" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class:"btn btn-outline-light" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
